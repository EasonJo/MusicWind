<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:orientation="horizontal">
<View
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"/>
    <RadioButton
        android:layout_centerVertical="true"
        android:id="@+id/item_select_image"
        android:layout_width="20dp"
        android:layout_height="45dp"
        android:checked="true"
        android:button="@drawable/radio_select_drawable"
        />
    <ImageView
        android:layout_alignTop="@id/item_select_image"
        android:layout_toRightOf="@id/item_select_image"
        android:layout_centerVertical="true"
        android:id="@+id/item_small"
        android:layout_width="45dp"
        android:layout_height="45dp"
       />

    <TextView

      android:maxLines="1"
        android:layout_toRightOf="@id/item_small"
      android:layout_alignTop="@id/item_small"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/item_sing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@android:color/white"
         />
    <TextView
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:layout_toRightOf="@id/item_small"
        android:layout_alignBottom="@id/item_small"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/item_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
          />
    <View
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>